{
	// [NOTE] extend/override appsettings.shared.json if necessary

	"AllowedHosts": "*",

	"ApplicationConfig": {
		"ResponseCacheTtl": 30
	},

	"WebInfoConfig": {
		"ApiTitle": "NetTemplate Identity API",
		"ApiDescription": "This is the sample NetTemplate Identity API"
	},

	"HangfireConfig": {
		"StartServer": true,
		"UseDashboard": true, // [NOTE] should be disabled or authorized in PROD
		"Jobs": [
			{
				"Enabled": true,
				"Name": "Sample",
				"CronExpressions": [ "*/1 * * * *" ]
			},
			{
				"Enabled": true,
				"Name": "SyncUsers",
				"CronExpressions": [ "0 0 * * *" ]
			}
		]
	},

	"JwtConfig": {
		"Secret": "z@123456!12345678900987654321!@z",
		"Audience": "identity-api",
		"Issuer": "identity-api",
		"TokenLifeTimeInSeconds": 31536000
	},

	"ApplicationClientsConfig": {
		"Clients": [
			{
				"Name": "Sample Admin Client",
				"ClientId": "sample-admin-client",
				"ClientSecret": "123456"
			}
		]
	},

	"LoggingConfig": {
		"MaxBodyLengthForLogging": 5000000
	},

	"SimulatedAuthConfig": {
		"Enabled": false
	},

	"ApacheKafkaConfig": {
		"AdminConfig": {
			"ClientId": "NetTemplateIdentityApi"
		},
		"CommonConsumerConfig": {
			"ClientId": "NetTemplateIdentityApi"
		},
		"CommonProducerConfig": {
			"ClientId": "NetTemplateIdentityApi"
		}
	},

	"ApacheKafkaConsumers": {

	},

	"RedisPubSubConfig": {
		"Subscribers": []
	},

	"Serilog": {
		"RequestLoggingOptions": {
			"MessageTemplate": "{ClientIp} HTTP {RequestMethod} {RequestPath} responded {StatusCode} in {Elapsed:0.0000} ms - Host: {Host} - Agent: {UserAgent}",
			"EnrichHeaders": {
				"UserAgent": "User-Agent"
			},
			"IncludeHost": true,
			"UseDefaultLogger": false,
			"StaticGetLevel": "Information",
			"MinimumLevel": "Information",
			"Enrich": [
				"FromLogContext",
				"WithUtcTimestamp",
				"WithClientIp"
			],
			"WriteTo": [
				{
					"Name": "Console",
					"Args": {
						"outputTemplate": "{Timestamp} [{Level:u3}] {Message:lj} | UserCode: {UserCode}{NewLine}" // {NewLine} required
					}
				}
			]
		}
	}
}
