{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},

	"AllowedHosts": "*",

	"AppConfig": {
		"ResponseCacheTtl": 30,
		"DbContextDebugEnabled": false,
		"UseRedis": true
	},

	"WebInfoConfig": {
		"ApiTitle": "NetTemplate Blog API",
		"ApiDescription": "This is the sample NetTemplate Blog API"
	},

	"ConnectionStrings": {
		"MainDbContext": "Server=localhost,1434;Database=NetTemplateBlog;Trusted_Connection=False;User Id=sa;Password=z@123456!;MultipleActiveResultSets=true;TrustServerCertificate=true",
		"Master": "Server=localhost,1434;Initial Catalog=master;Trusted_Connection=False;User Id=sa;Password=z@123456!;MultipleActiveResultSets=true;TrustServerCertificate=true",
		"Hangfire": "Server=localhost,1434;Database=NetTemplateBlogHangfire;Trusted_Connection=False;User Id=sa;Password=z@123456!;MultipleActiveResultSets=true;TrustServerCertificate=true"
	},

	"HangfireConfig": {
		"ServerName": "Net Template Blog Server",
		"DatabaseName": "NetTemplateBlogHangfire",
		"UseDashboard": true, // [NOTE] should be disabled in PROD
		"TimeZone": "SE Asia Standard Time",
		"Jobs": [
			{
				"Name": "Sample",
				"CronExpressions": [ "*/1 * * * *" ]
			}
		]
	},

	"ViewsConfig": {
		"PostViewVersion": "1.0.0",
		"PostCategoryViewVersion": "1.0.0"
	},

	"JwtConfig": {
		"Secret": "z@123456!12345678900987654321!@z",
		"Audience": "blog-api",
		"Issuer": "identity-api",
		"TokenLifeTimeInSeconds": 31536000
	},

	"ClientConfig": {
		"ClientId": "",
		"ClientSecret": "",
		"IdentityServerUrl": ""
	},

	"ClientsConfig": {
		"Clients": [
			{
				"Name": "Sample Admin Client",
				"ClientId": "sample-admin-client",
				"ClientSecret": "123456"
			}
		]
	},

	"LoggingConfig": {
		"MaxBodyLengthForLogging": 5000000
	},

	"RedisConfig": {
		"User": "admin",
		"Password": "z@123456!",
		"Endpoints": [ "localhost:6379" ]
	},

	"Serilog": {
		"RequestLoggingOptions": {
			"MessageTemplate": "{ClientIp} HTTP {RequestMethod} {RequestPath} responded {StatusCode} in {Elapsed:0.0000} ms - Host: {Host} - Agent: {UserAgent}",
			"EnrichHeaders": {
				"UserAgent": "User-Agent"
			},
			"IncludeHost": true,
			"UseDefaultLogger": false,
			"StaticGetLevel": "Information",
			"MinimumLevel": "Information",
			"Enrich": [
				"FromLogContext",
				"WithUtcTimestamp",
				"WithClientIp"
			],
			"WriteTo": [
				{
					"Name": "Console",
					"Args": {
						"outputTemplate": "{Timestamp} [{Level:u3}] {Message:lj} | UserCode: {UserCode}{NewLine}" // {NewLine} required
					}
				}
			]
		},

		"Using": [],
		"MinimumLevel": {
			"Default": "Information",
			"Override": {
				"Microsoft": "Warning",
				"Microsoft.AspNetCore.Mvc": "Error",
				"Hangfire": "Information"
			}
		},
		"Enrich": [
			"FromLogContext",
			"WithUtcTimestamp",
			"WithClientIp"
		],
		"Destructure": [],
		"WriteTo": [],
		"Properties": {
			"Application": "NetTemplateBlog"
		},
		"SupportedLoggers": {
			"FileLogger": {
				"LevelSwitches": {
					"$controlSwitch": "Information"
				},
				"WriteTo": [
					{
						"Name": "Async",
						"Args": {
							"configure": [
								{
									"Name": "File",
									"Args": {
										"levelSwitch": "$controlSwitch",
										"path": "logs/app.txt",
										"rollingInterval": "Day",
										"retainedFileTimeLimit": 3,
										"outputTemplate": "{Timestamp} [{Level:u3}] {Message:lj} | UserCode: {UserCode}{NewLine}{Exception}{NewLine}"
									}
								}
							],
							"bufferSize": 1000,
							"blockWhenFull": true
						}
					}
				]
			},
			"ConsoleLogger": {
				"WriteTo": [
					{
						"Name": "Console",
						"Args": {
							"outputTemplate": "{Timestamp} [{Level:u3}] {Message:lj} | UserCode: {UserCode}{NewLine}{Exception}{NewLine}"
						}
					}
				]
			}
		}
	}
}
