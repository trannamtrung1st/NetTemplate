{
	// [NOTE] extend/override appsettings.shared.json if necessary

	"ApacheKafkaConfig": {
		"AdminConfig": {
			"ClientId": "NetTemplateWorker"
		},
		"CommonConsumerConfig": {
			"ClientId": "NetTemplateWorker"
		},
		"CommonProducerConfig": {
			"ClientId": "NetTemplateWorker"
		}
	},

	"ApacheKafkaConsumers": {
		"SyncNewUser": {
			"ConsumerCount": 2,
			"GroupId": "SyncNewUser"
		}
	},

	"RedisPubSubConfig": {
		"Subscribers": [ "SyncNewUser" ]
	},

	"Serilog": {
		"RequestLoggingOptions": {
			"MessageTemplate": "{ClientIp} HTTP {RequestMethod} {RequestPath} responded {StatusCode} in {Elapsed:0.0000} ms - Host: {Host} - Agent: {UserAgent}",
			"EnrichHeaders": {
				"UserAgent": "User-Agent"
			},
			"IncludeHost": true,
			"UseDefaultLogger": false,
			"StaticGetLevel": "Information",
			"MinimumLevel": "Information",
			"Enrich": [
				"FromLogContext",
				"WithUtcTimestamp",
				"WithClientIp"
			],
			"WriteTo": [
				{
					"Name": "Console",
					"Args": {
						"outputTemplate": "{Timestamp} [{Level:u3}] {Message:lj} | UserCode: {UserCode}{NewLine}" // {NewLine} required
					}
				}
			]
		}
	}
}
